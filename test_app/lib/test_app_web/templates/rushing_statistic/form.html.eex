<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :player_name %>
  <%= text_input f, :player_name %>
  <%= error_tag f, :player_name %>

  <%= label f, :team %>
  <%= text_input f, :team %>
  <%= error_tag f, :team %>

  <%= label f, :player_position %>
  <%= text_input f, :player_position %>
  <%= error_tag f, :player_position %>

  <%= label f, :attempts_per_game %>
  <%= number_input f, :attempts_per_game, step: "any" %>
  <%= error_tag f, :attempts_per_game %>

  <%= label f, :attempts %>
  <%= number_input f, :attempts, step: "any" %>
  <%= error_tag f, :attempts %>

  <%= label f, :total_yards %>
  <%= number_input f, :total_yards, step: "any" %>
  <%= error_tag f, :total_yards %>

  <%= label f, :average_yards %>
  <%= number_input f, :average_yards, step: "any" %>
  <%= error_tag f, :average_yards %>

  <%= label f, :yards_per_game %>
  <%= number_input f, :yards_per_game, step: "any" %>
  <%= error_tag f, :yards_per_game %>

  <%= label f, :touchdowns %>
  <%= number_input f, :touchdowns %>
  <%= error_tag f, :touchdowns %>

  <%= label f, :longest_rush %>
  <%= text_input f, :longest_rush %>
  <%= error_tag f, :longest_rush %>

  <%= label f, :first_downs %>
  <%= number_input f, :first_downs %>
  <%= error_tag f, :first_downs %>

  <%= label f, :first_downs_pct %>
  <%= number_input f, :first_downs_pct, step: "any" %>
  <%= error_tag f, :first_downs_pct %>

  <%= label f, :twenty_yards_plus %>
  <%= number_input f, :twenty_yards_plus %>
  <%= error_tag f, :twenty_yards_plus %>

  <%= label f, :fourty_yards_plus %>
  <%= number_input f, :fourty_yards_plus %>
  <%= error_tag f, :fourty_yards_plus %>

  <%= label f, :fumbles %>
  <%= number_input f, :fumbles %>
  <%= error_tag f, :fumbles %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
